@model PTPM_HTQLNH_SHARE.Models.InvoiceViewModel
@{
    ViewBag.Title = "Thông tin hóa đơn";
}
<style>
    .control-label{
        font-size:13px;
    }
    .form-control{
        font-size:13px;
        margin:4px 0px;
    }
    table th{
        font-size:14px
    }
    table td {
        font-size: 13px
    }
</style>
<div class="card">
    <div class="card-header">
        <strong class="card-title">Danh sách hóa đơn</strong>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("SaveInvoice","Invoice",FormMethod.Post))
        {
            <div class="row">

                <div class="col-md-8">
                    <div class="row">
                        <label class="control-label col-sm-4" for="text">Khách hàng</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.header.id, new { type = "hidden" })

                            @Html.TextBoxFor(m => m.header.buyer_name, new { @class = "form-control", placeholder = "Nhập tên khách hàng" })

                        </div>
                    </div>

                    <div class="row">
                        <label class="control-label col-sm-4" for="text">Địa chỉ</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.header.buyer_address, new { type = "hidden" })

                            @Html.TextBoxFor(m => m.header.buyer_address, new { @class = "form-control", placeholder = "Nhập địa chỉ" })

                        </div>
                    </div>

                    <div class="row">
                        <label class="control-label col-sm-4" for="text">Mã số thuế</label>
                        <div class="col-sm-8">

                            @Html.TextBoxFor(m => m.header.buyer_tax, new { @class = "form-control", placeholder = "Nhập mã số thuế" })

                        </div>
                    </div>


                    <div class="row">
                        <label class="control-label col-sm-4" for="text">Số điện thoại</label>
                        <div class="col-sm-8">

                            @Html.TextBoxFor(m => m.header.buyer_phone, new { @class = "form-control", placeholder = "Nhập số điện thoại" })

                        </div>
                    </div>

                    <div class="row">
                        <label class="control-label col-sm-4" for="text">Email</label>
                        <div class="col-sm-8">

                            @Html.TextBoxFor(m => m.header.buyer_email, new { @class = "form-control", placeholder = "Nhập email" })

                        </div>
                    </div>

                </div>
                <div class="col-md-4">
                    @*<div class="row">
                        <label class="control-label col-sm-4" for="text">Mẫu số</label>
                        <div class="col-sm-8">

                            @Html.TextBoxFor(m => m.header.invoice_pattern, new { @class = "form-control", placeholder = "Mẫu số", @readonly = "true" })

                        </div>
                    </div>

                    <div class="row">
                        <label class="control-label col-sm-4" for="text">Ký hiệu</label>
                        <div class="col-sm-8">

                            @Html.TextBoxFor(m => m.header.invoice_seri, new { @class = "form-control", placeholder = "Ký hiệu", @readonly = "true" })

                        </div>
                    </div>*@

                    <div class="row">
                        <label class="control-label col-sm-4" for="text">Số hóa đơn</label>
                        <div class="col-sm-8">

                            @Html.TextBoxFor(m => m.header.invoice_no, new { @class = "form-control", placeholder = "Số hóa đơn", @readonly = "true" })

                        </div>
                    </div>

                    <div class="row">
                        <label class="control-label col-sm-4" for="text">Ngày hóa đơn</label>
                        <div class="col-sm-8">

                            @Html.TextBoxFor(m => m.header.transaction_date, new { @class = "form-control", placeholder = "Ngày hóa đơn", @readonly = "true" })

                        </div>
                    </div>

                    <div class="row">
                        <label class="control-label col-sm-4" for="text">Mã tiền tệ</label>
                        <div class="col-sm-4">

                            @Html.TextBoxFor(m => m.header.currency_type, new { @class = "form-control", placeholder = "Mã tiền tệ", @readonly = "true" })

                        </div>
                        <div class="col-sm-4">

                            @Html.TextBoxFor(m => m.header.exc_rate, new { @class = "form-control", placeholder = "Tỷ giá", @readonly = "true" })

                        </div>
                    </div>

                    <div class="row">
                        <label class="control-label col-sm-4" for="text">Hình thức thanh toán</label>
                        <div class="col-sm-8">

                            @Html.TextBoxFor(m => m.header.payment_type, new { @class = "form-control", placeholder = "Hình thức thanh toán", @readonly = "true" })

                        </div>
                    </div>

                    <div class="row">
                        <label class="control-label col-sm-4" for="text">Trạng thái</label>
                        <div class="col-sm-8">

                            @Html.TextBoxFor(m => m.header.status, new { @class = "form-control", placeholder = "Trạng thái", @readonly = "true" })

                        </div>
                    </div>

                </div>

            </div>

            <div class="card-header">
                <strong class="card-title">Chi tiết hóa đơn</strong>
            </div>

            <div>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="width:30px">STT</th>

                            <th>Tên hàng hóa</th>
                            <th>ĐVT</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.details != null)
                        {
                            foreach (PTPM_HTQLNH_SHARE.Models.InvoiceDetail detail in Model.details)
                            {
                                <tr>
                                    <td></td>
                                    <td>@detail.name</td>
                                    <td>@detail.unit</td>
                                    <td>@detail.quantity</td>
                                    <td>@detail.price</td>
                                    <td>@detail.totalAmount</td>
                                </tr>
                            }
                        }
                        <tr>
                            <td colspan="5">Tổng tiền </td>
                            <td>0</td>
                        </tr>
                    </tbody>

                </table>

            </div>
            <div class="pull-right">
                <a class="btn btn-default btn-sm" href="@Url.Action("Index")"><i class="fa fa-arrow-left"></i> Quay lại</a>
                <a class="btn btn-info btn-sm" href="@Url.Action("")"><i class="fa fa-save"></i> Lưu</a>
                <a class="btn btn-warning btn-sm" href="@Url.Action("")"><i class="fa fa-upload"></i> Phát hành</a>
                <a class="btn btn-success btn-sm" href="@Url.Action("")"><i class="fa fa-print"></i> In hóa đơn</a>
                <a class="btn btn-danger btn-sm" href="@Url.Action("")"><i class="fa fa-trash"></i> Xóa</a>

            </div>
        }
    </div>
       
     
    </div>
